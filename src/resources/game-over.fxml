<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="application.GameOverController"
      alignment="CENTER" spacing="15" style="-fx-background-color: black;" prefWidth="600" prefHeight="500">

    <Label fx:id="finalScoreLabel" text="Final Score: " style="-fx-font-size: 24px; -fx-text-fill: white;"/>
    <Label fx:id="finalStrikesLabel" text="Strikes: " style="-fx-font-size: 18px; -fx-text-fill: white;"/>
    <Label fx:id="highestScoreLabel" text="Highest Score: " style="-fx-font-size: 18px; -fx-text-fill: white;"/>
    
    <TextArea fx:id="allAttemptsArea" editable="false" wrapText="true" prefHeight="200"
              style="-fx-font-size: 14px; -fx-control-inner-background: #1e1e1e; -fx-text-fill: white;"/>

    <Button text="Play Again" onAction="#handlePlayAgain" style="-fx-font-size: 16px;"/>
    <Button text="Main Menu" onAction="#handleMainMenu" style="-fx-font-size: 16px;"/>
    <Button text="Exit" onAction="#handleExit" style="-fx-font-size: 16px;"/>
</VBox>
